<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= t 'point_statement.donated_by' %></th>
    <th><%= t 'point_statement.to_goal' %></th>
    <th><%= t 'point_statement.amount' %></th>
    <th><%= t 'point_statement.available' %></th>
    <th><%= t 'point_statement.redemption' %></th>
  </tr>
  </thead>
  <tbody>
<% transactions.each do |point_transaction| %>
  <tr>
    <td><%= point_transaction.goal_donation.donor_name %></td>
    <td><%= point_transaction.goal.description %> (<%= point_transaction.goal.achiever.screen_name %>) </td>
    <td><%= point_transaction.point_amount %></td>
    <td><%= point_transaction.active %></td>
    <td><%= point_transaction.redeemed? ? point_transaction.redemption_point_transaction_id : t("point_statement.not_redeemed") %></td>
  </tr>
<% end %>
</tbody>
</table>

