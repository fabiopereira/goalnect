<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= t 'point_statement.donated_by' %></th>
    <th><%= t 'point_statement.to_goal' %></th>
    <th><%= t 'when' %></th>
    <th><%= t 'points' %></th>
    <th><%= t 'point_statement.status' %></th>
  </tr>
  </thead>
  <tbody>
<% transactions.each do |point_transaction| %>
  <tr class="<%= point_transaction.status.to_s %>">
    <td><%= point_transaction.goal_donation.donor_name %></td>
    <td><%= point_transaction.goal.description %> (<%= point_transaction.goal.achiever.screen_name %>) </td>
    <td><%= point_transaction.created_at %></td>
    <td><%= point_transaction.point_amount %></td>
    <td>   
		<% case point_transaction.status %>
        	<% when :locked %>
              <%= t "point_transaction.status_locked" %>
        	<% when :available %>
              <%= t "point_transaction.status_available" %>
        	<% when :redeemed %>
        	  <%= t "point_transaction.status_redeemed", :redemption_point_transaction_id => point_transaction.redemption_point_transaction_id %>
        	<% else %>
        	  <%= point_transaction.status.to_s %>
		<% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

