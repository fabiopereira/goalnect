<% @goal_comments.each do |goal_comment| %>
  <tr>
    <td><%= goal_comment.message %></td>
    <td><%= goal_comment.goal_id %></td>
    <td><%= goal_comment.user_id %></td>
    <td><%= link_to 'Show', goal_comment %></td>
    <td><%= link_to 'Edit', edit_goal_comment_path(goal_comment) %></td>
    <td><%= link_to 'Destroy', goal_comment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

