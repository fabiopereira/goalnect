<%- model_class = @goal.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @goal.owner.screen_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:achiever) %>:</strong></dt>
  <dd><%= @goal.achiever.screen_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @goal.option.name%></dd>

  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @goal.status %></dd>

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @goal.description %></dd>

  <dt><strong><%= model_class.human_attribute_name(:achieved_on) %>:</strong></dt>
  <dd><%= @goal.achieved_on %></dd>

  <dt><strong><%= model_class.human_attribute_name(:due_on) %>:</strong></dt>
  <dd><%= @goal.due_on %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              goals_path(@goal.achiever.username), :class => 'btn'  %>
</div>
