<script>
  $(document).ready(function(){
	$("#user_image_link").click(function () {
	    $("#user_image").click();
	});
  });	
	
</script>

<%= form_for @user, :url => '/achiever/update', :html => { :class => 'form-horizontal' } do |f| %>    

	<%= render 'layouts/model_error_messages', :target => @user %>
    <div class="control-group">
	<%= f.label :screen_name, :class => 'control-label' %>
	<div class="controls">
      <%= f.text_field :screen_name %>
    </div>
  </div>

    <div class="control-group">
	<%= f.label :username, :class => 'control-label' %>
	<div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :about_me, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :about_me, :class => 'text_area', :size => "50x10"  %>
    </div>
  </div>

   <div class="control-group">
	<%= f.label :photo, :class => 'control-label' %>
	<div class="controls">
	  <input type="button" id="user_image_link" value="Change"/>
	 <%= f.file_field :image,  :style => "display : none" %>
	
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")), '/'+@user.username, :class => 'btn' %>
  </div>
<% end %>
