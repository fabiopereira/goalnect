
		<div class="span2 well" style="border-color:navy">
			<%= image_tag @achiever.image_url(:thumb) if @achiever.image? %><br/>
			<h4><%= @achiever.screen_name %></h4>
			<hr/>
				<p class="action-text"><%= link_to t('change_photo'), '/achiever/edit_profile_photo' if current_user_is_achiever?(@achiever) %></p>
			<hr/>
			<p class="action-text"><%= link_to t('edit_profile'), '/achiever/edit' if current_user_is_achiever?(@achiever)  %></p>
			<hr/>
				<p class="points-summary"><b>Points Summary:</b></p>
				<p class="points-summary">Active Points.......<%=@achiever.points_summary(true)%>pts</p>
				<p class="points-summary">Locked Points.....<%=@achiever.points_summary(false)%>pts</p>
		</div>
				<div class="span8 row well" style="border-color:#17AE8F">
					<p class="subtitle_green"><b>ABOUT ME:</b></p>
					<% if @achiever.about_me.blank? %>
						Hi, my name is <%= @achiever.screen_name %> and I'm a GOAL ACHIEVER!!!
					<% else %>
					<%= @achiever.about_me %>
					<% end %>
				</div>
				<div class="span8 row well" style="background: white;border-color:#D0255B">
					<p class="subtitle_red"><b>GOALS:</b>
					<% my_goals = @achiever.find_active_goals() %>
					<% is_my_home = my_goals.empty? && current_user_is_achiever?(@achiever) %>
					<%= render 'goals/new_goal_url' %>
					</p>
					
					<%if is_my_home %>
						Your next step is to <%= link_to 'commit to a goal', new_goal_path(@achiever.username) %>
					<%else%>
					
					<table class="table table-striped table-condensed">
					  <thead>
					    <tr>
					 	  <th>Title</th>
					      <th>Status</th>
					    </tr>
					  </thead>
					  <tbody>
					    <% my_goals.each do |goal| %>
					      <tr>
					        <td><%= link_to goal.title,  show_goal_path(goal.achiever.username, goal.id) %></td>
							<td>
							<% if current_user_is_achiever?(@achiever) && goal.goalStage.id == GoalStage::PENDING.id %>
								<%= form_for goal, :url => '/'+goal.achiever.username+'/goals/change_stage/'+goal.id.to_s, :html => { :class => 'form-horizontal' } do |f| %>
			            			<%= f.hidden_field :goal_stage_id %>
									<%= f.submit nil, :disable_with => "Sending", :class => "btn btn-primary", :value => "Accept", :onclick => "$('#goal_goal_stage_id').prop('value', 3);"%>
									<%= f.submit nil, :disable_with => "Sending", :class => "btn", :value => "Not Accept", :onclick => "$('#goal_goal_stage_id').prop('value', 2);"%>
								<% end %>
							<% else %>
						    	<%= goal.goalStage.name %>
							<% end %>
							</td>
					      </tr>
					    <% end %>
				
					  </tbody>
					</table>
				    <% end %>	
					
				</div>
				<div class="span8 row well" style="background: white;border-color:#E6C520">
					<p class="subtitle_yellow"><b>THE JOURNEY:</b> </p>
					
						<% journeys = @achiever.find_5_most_recent_updates() %>	
						<% journeys.each do |journey| %>
					
						<%= journey.message%>
						<span class="small_i_font">(<%= journey.created_at %>)</span>
							<hr style="color: #717171; height: 1px;">
						<% end %>
				
				</div>
	
	
