<%= render 'achiever/achiever_profile', :achiever => @achiever %>

				<div class="span8">
				<div class="row well" style="border-color:#17AE8F">
					<p class="subtitle_green"><b>ABOUT ME:</b></p>
					<% if @achiever.about_me.blank? %>
						<%= t 'blank_about_me', :name => @achiever.screen_name %>
					<% else %>
					<%= @achiever.about_me %>
					<% end %>
				</div>
				<div class="row well" style="background: white;border-color:#D0255B">
						<span class=" subtitle_red">
							<b>GOALS:</b>
						</span>
						<span style="float:right">
								<%= render 'goals/new_goal_url' %>
						</span>
					
				
					</p>
					<% my_goals = @achiever.find_active_goals() %>
					<% is_my_home = my_goals.empty? && current_user_is_achiever?(@achiever) %>
					<%if is_my_home %>
						Your next step is to <%= link_to 'commit to a goal', new_goal_path(@achiever.username) %>
					<%else%>
					
					<table class="table table-striped table-condensed">
					  <thead>
					    <tr>
					 	  <th>Title</th>
					      <th>Status</th>
						  <th></th>
					    </tr>
					  </thead>
					  <tbody>
					    <% my_goals.each do |goal| %>
					      <tr>
					        <td><%= link_to goal.title,  show_goal_path(goal.achiever.username, goal.id) %></td>
							<td>
							<% if current_user_is_achiever?(@achiever) && goal.goalStage.id == GoalStage::PENDING.id %>
								<%= form_for goal, :url => '/'+goal.achiever.username+'/goals/change_stage/'+goal.id.to_s, :html => { :class => 'form-horizontal' } do |f| %>
			            			<%= f.hidden_field :goal_stage_id %>
									<%= f.submit nil, :disable_with => "Sending", :class => "btn btn-primary", :value => "Accept", :onclick => "$('#goal_goal_stage_id').prop('value', 3);"%>
									<%= f.submit nil, :disable_with => "Sending", :class => "btn", :value => "Not Accept", :onclick => "$('#goal_goal_stage_id').prop('value', 2);"%>
								<% end %>
							<% else %>
						    	<%= goal.goalStage.name %>
							<% end %>
							</td>
							<td align="right">
							  <span class="tiptip" style="float:right">
								  <a href="<%= i_support_goal_path(goal.achiever.username, goal.id)  %>" class="button button-g" title="I believe"><span class="icon icon101"></span></a>
							   	  <a href="<%= i_dont_support_path(goal.achiever.username, goal.id) %>" class="button button-r" title="Serously?!?"><span class="icon icon100"></span></a>
								  <a href="<%= donate_goal_path(goal.id)%>" class="button button-y" title="Donate"><span class="icon icon51"></span></a>
							  	  <a href="<%=show_goal_path(goal.achiever.username, goal.id)%>" class="button button-b" title="View Goal"><span class="icon icon198"></span></a>
							  </span>
							</td>
					      </tr>
					    <% end %>
				
					  </tbody>
					</table>
				    <% end %>	
					
				</div>
				<div class="row well" style="background: white;border-color:#E6C520">
					<p class="subtitle_yellow"><b>THE JOURNEY:</b> </p>
					
						<% journeys = @achiever.find_5_most_recent_updates() %>	
						<% journeys.each do |journey| %>
					
						<%= journey.message%>
						<span class="small_i_font">(<%= journey.created_at %>)</span>
							<hr style="color: #717171; height: 1px;">
						<% end %>
				
				</div>
	</div>
	
