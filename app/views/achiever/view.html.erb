<div class="row"> 
	<div class="span2 well">
		<p align="right"><%= link_to t('edit'), '/achiever/edit' if current_user.id == @achiever.id %></p>
		<p align="right"><%= link_to t('edit_profile_photo'), '/achiever/edit_profile_photo' if current_user.id == @achiever.id %></p>
		
		<%= image_tag @achiever.image_url(:thumb) if @achiever.image? %><br/>
		<h4><%= @achiever.screen_name %></h4>
	</div>  

	<div class="span6 well" style="background: white;">
		<div>
				<div class="span5 row well">
					<b>ABOUT ME:</b> <br/>
					<% if @achiever.about_me.blank? %>
						Hi, my name is <%= @achiever.screen_name %> and I'm a GOAL ACHIEVER!!!
					<% else %>
					<%= @achiever.about_me %>
					<% end %>
				</div>
				<div class="span5 row well" style="background: white;">
					<b>GOALS:</b> 
					<% my_goals = @achiever.find_active_goals() %>
					<% is_my_home = my_goals.empty? && current_user.id == @achiever.id %>
					<%= render 'goals/new_goal_url' %>
					<br/>
					
					<%if is_my_home %>
						Your next step is to <%= link_to 'commit to a goal', new_goal_path(@achiever.username) %>
					<%else%>
					
					<table class="table table-striped table-condensed">
					  <thead>
					    <tr>
					 	  <th>Title</th>
					      <th>Status</th>
					    </tr>
					  </thead>
					  <tbody>
					    <% my_goals.each do |goal| %>
					      <tr>
					        <td><%= link_to goal.title,  show_goal_path(goal.achiever.username, goal.id) %></td>
							<td>
							<% if current_user.id == @achiever.id && goal.goalStage.id == GoalStage::PENDING.id %>
								<%= form_for goal, :url => '/'+goal.achiever.username+'/goals/change_stage/'+goal.id.to_s, :html => { :class => 'form-horizontal' } do |f| %>
			            			<%= f.hidden_field :goal_stage_id %>
									<%= f.submit nil, :disable_with => "Sending", :class => "btn btn-primary", :value => "Accept", :onclick => "$('#goal_goal_stage_id').prop('value', 3);"%>
									<%= f.submit nil, :disable_with => "Sending", :class => "btn", :value => "Not Accept", :onclick => "$('#goal_goal_stage_id').prop('value', 2);"%>
								<% end %>
							<% else %>
						    	<%= goal.goalStage.name %>
							<% end %>
							</td>
					      </tr>
					    <% end %>
				
					  </tbody>
					</table>
				    <% end %>	
					
				</div>
				<div class="span5 row well" style="background: white;">
					<b>THE JOURNEY:</b> <br/>
						Hi, my name is <%= @achiever.screen_name %> and I'm a GOAL ACHIEVER!!!
				</div>
		</div>
	</div>
	<div class="span2 well">
		+ Join a Team <br/>
		+ Create a team<br/><br/>
		
		+ Join Event<br/>
		+ Create Event
	</div>
</div>
