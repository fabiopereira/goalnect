
<div class="row well">
	<b>Change profile photo</b>
	<%= form_for @user, :url => '/achiever/update', :html => { :class => 'form-horizontal', :multipart => true } do |f| %>    

		<%= render 'layouts/model_error_messages', :target => @user %>

		<div>
			<%= image_tag @user.image_url(:thumb) if @user.image? %><br/>
		</div>

	   <div class="control-group">
		<%= f.label :photo, :class => 'control-label' %>
		<div class="controls">
		 <%= f.file_field :image %>
	    </div>
	  </div>
	
	
	  <div class="form-actions">
	    <%= f.submit nil, :class => 'btn btn-primary' %>
		<%= link_to t('cancel'), '/'+@user.username, :class => 'btn' %>
	  </div>
	
	
	<% end %>
</div>
                                               
<div id="cropping-image">
	<%= form_for @user, :url => '/achiever/crop', :html => { :class => 'form-horizontal'} do |f| %>    
	
	<%= image_tag @user.image_url(:large), id: "cropbox" %>
	
   	  <% %w[x y w h].each do |attribute| %>
	    <%= f.hidden_field "crop_#{attribute}" %>
	  <% end %>
 
	  <div class="form-actions">
	    <%= f.submit "Crop", :class => 'btn btn-primary' %>
		<%= link_to t('cancel'), '/'+@user.username, :class => 'btn' %>
	  </div>
	
	<% end %>
</div>


