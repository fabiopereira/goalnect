<%- model_class = @goal_option.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @goal_option.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:is_system) %>:</strong></dt>
  <dd><%= @goal_option.is_system %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              goal_options_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_goal_option_path(@goal_option), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              goal_option_path(@goal_option),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
