<!DOCTYPE html>
<html>
	<head>
		<title>Goalnect</title>
		<%= stylesheet_link_tag "application", media: "all"  %>
		<%= stylesheet_link_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/smoothness/jquery-ui.css"%>
		<%= csrf_meta_tag %>
		<%= javascript_include_tag "application" %>
		<script src="http://connect.facebook.net/en_US/all.js#xfbml=1">
		</script>
		<script>
		$(function() {
				$( ".jq-tabs" ).tabs();
			});
			</script>
		
		</script>
		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta property="fb:app_id" content="<%= ENV['FACEBOOK_APP_ID']%>">
		<%= render 'layouts/shim' %>
		<%= analytics_init if Rails.env.production? || Rails.env.staging? %>
		<header>
		<%= render 'layouts/header' %>
		</header>
	</head>
	
	<body>
		<div id="fb-root"></div>
		<script>(function(d, s, id) {
		  var js, fjs = d.getElementsByTagName(s)[0];
		  if (d.getElementById(id)) return;
		  js = d.createElement(s); js.id = id;
		  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>
		<section id="main">	
		  <div id="container" class="container">
			<div class="span12 well" style="margin-left:0;background: white;">
					<div class="flash span11">
						<% flash.each do |type, message| -%>
						<div class="message <%= type %>">
							<p>
								<%= message %>
							</p>
						</div>
						<% end -%>
					</div>
					<%= yield %>
				</div>
				<div class="footer span12 well" style="margin-left:0;">
					<div class="footer-start">
						<table class="span12">
							<tr>
								<td width="33%">
								  <p class="title-footer"><%=t "footer.information" %></p><br/>
								</td>
								<td  width="33%">
								  <p class="title-footer"><%=t "footer.find_us" %></p><br/>
								</td>
								<td  width="33%">
								  <p class="title-footer"><%=t "footer.contact" %></p><br/>
								</td>
							<tr>
							<tr>
								<td><p class="link-footer"><%= link_to t("static.howitworks"), "/s/faq" %></p><br/></td>
								<td><p class="link-footer"><a href="http://www.facebook.com/goalnect" target="blank"><%= image_tag("facebook.png", width: "25") %> Facebook</a></p><br/></td>
								<td><p class="link-footer"><%= link_to t("charities.if_you_are_a_charity"), new_charity_path %></p><br/></td>
							</tr>
							<tr>
								<td><p class="link-footer"><%= link_to t("static.faq"), "/s/faq" %></p><br/></td>
								<td><p class="link-footer"><a href="http://www.twitter.com/goalnect" target="blank"><%= image_tag("twitter.png", width: "25") %> Twitter</a></p><br/></td>
								<td><p class="link-footer"><%= link_to t("charities.to_suggest_a_charity"), new_charity_path %></p><br/></td>
							</tr>
							<tr>
								<td><p class="link-footer"><%= link_to t("static.terms"), "/s/terms" %></p><br/></td>
								<td><p class="link-footer"><a href="mailto:<%= t "email.team" %>" target="blank"><%= image_tag("goalnect-mailto-48x48.png", width: "25") %> Email</a></p><br/></td>
								<td><p class="link-footer"><%= t"footer.or_call" %> +55 11 3280-7400</p><br/></td>
							</tr>
							<tr>
								<td><p class="link-footer"><a href="mailto:<%= t "email.team" %>" target="blank"><%=t "footer.contact" %></a></p><br/></td>
							</tr>
							<tr>
								<td><p class="link-footer"><%= link_to t("charities.charity"), new_charity_path %></p><br/></td>
							</tr>
						</table>	
						</div>
					<div class="footer-end">
						<center>
								Goalnect 
						</center>
					</div>
				</div>
		   </div>
		</section>
		</div>
		
	</body>
</html>
