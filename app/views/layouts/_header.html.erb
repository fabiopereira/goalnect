          <div class="nav-collapse collapse" style="height: 0px;">
            <ul class="nav pull-right">
	            <li>
					<%= link_to t("static.howitworks"), "/s/faq" %>
		        </li>
				<li><a href="http://www.facebook.com/goalnect" target="blank"><%= image_tag("facebook.png", width: "25") %></a></li>
				<li>
					<a href="http://www.twitter.com/goalnect" target="blank"><%= image_tag("twitter.png", width: "25") %></a>
