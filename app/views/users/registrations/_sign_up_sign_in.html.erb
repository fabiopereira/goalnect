<article class="box-grande">
<div>
<div id="sign_in">		
<div><%= render 'layouts/model_error_messages', :target => resource %></div>

  <% Togg.le(:feature_authentication) do %>
  <div id="facebook_login">
	<h2><%= t 'devise.sessions.facebook_sign_in' %></h2>
	<h3><%= t 'devise.sessions.facebook_sign_in_subtitle' %></h3>

	  <%= link_to t('facebook.login_title'), '/auth/facebook/', :class => "fb-button" %>
 </div> 
 <% end %>
 	
	<div id="goalnect_login">
		<h2><%= t 'devise.sessions.sign_in' %></h2>
		<h3><%= t 'devise.sessions.sign_in_subtitle' %></h3>
		<%= image_tag "sign_in.png", :class => "sing_in_img" %>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  		<p><%= f.email_field :email, :placeholder => User.human_attribute_name('email') %></p>
  		<p><%= f.password_field :password, :placeholder => User.human_attribute_name('password') %></p>
  		<p><%= link_to t("devise.links.forgot_your_password"), new_password_path(resource_name) %>
  		<% if devise_mapping.rememberable? -%>
   			<br/><%= f.check_box :remember_me %> <%= User.human_attribute_name('remember_me') %>
  		<% end -%>
  		</p>
  		<%= f.submit t("devise.sessions.sign_in_btn"), :class => 'btn btn-success'  %>
		<% end %>
	</div>
</div>

<div id="sign_up">		
<h2><%= t 'devise.sessions.sign_up'%></h2>
<h3><%= t 'devise.sessions.sign_up_subtitle' %></h3>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= image_tag "sign_up.png", :class => "sing_in_img" %>
  <p><%= f.email_field :email, :placeholder => User.human_attribute_name('email') %></p>
  <p><%= f.password_field :password, :placeholder => User.human_attribute_name('password') %></p>
  <p><%= f.password_field :password_confirmation, :placeholder => User.human_attribute_name('password_confirmation') %></p>
  <p><%= f.text_field :screen_name, :placeholder => User.human_attribute_name('screen_name') %></p>
  <%= t "url.site" %>/<br/>
  <p><%= f.text_field :username, :placeholder => User.human_attribute_name('username') %></p>
  <p><%= f.hidden_field :country_id, :value => Country.current_from_locale.id %></p>
  <p><%=t('agreed_terms')%> <%= link_to t("static.terms"), "/s/terms", :target => 'blank' %></p>
  <div><%= f.submit t("devise.sessions.sign_up_btn"), :class => 'btn btn-success' %></div>
<% end %>
</div>
</div>
</article>

