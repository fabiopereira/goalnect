<div class="page-header" style="padding-top:30px">
	<h4 style="text-align:right"><%= t("charity_page.last_7_days_goals") %></h4>
</div>
<% if @goals && !@goals.empty?%>
<table class="table table-striped table-condensed tiptip"style="border-spacing: 0px;" id="donations_table">
  <thead>
    <tr>
	  <th width="100px"><%= t "charity_page.report" %> ?</th>
	  <th>Goal</th>
    </tr>
  </thead>
  <tbody>
      <% @goals.each do |goal| %>
      <tr>
	    <td>
	    	<a href="<%=goal_report_abuse_path(goal.achiever.username, goal.id)%>" class="button icon-image" title='<%= t "report_abuse"%>' data-confirm="You are about to report abuse for: <%= goal.title %>" ><span class="icon icon5"></span></a>
	    </td>
		<td><%= goal.title %></td>	
      </tr>
    <% end %>		
  </tbody>
</table>
<%else%>
	<%=t "charity_page.no_goals_message"%>
<%end%>