<h1><%= t "know_our_charities" %></h1>
<div class="box-grande" id="charities">
<% @charities.each do |charity| %>
<div class="clearfix" id="goal_charity_id_<%=charity.id%>">
	<figure class="new_goal_charity_img">
		<a href="<%= charity_show_path charity.id %>" target="blank">
	        <%= img_tag charity, :thumb %>
	    </a>
	</figure>
	<p><h2><%= charity.charity_name %></h2></p>
	<p class="new_goal_charity_description"> <%= raw_scape_html charity.description %></p>
	<hr/>
</div>
<% end %>
</div>