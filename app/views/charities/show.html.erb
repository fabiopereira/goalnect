<%- model_class = Charity -%>
<div class="page-header">
	<h1><%= @charity.charity_name %></h1>
	<span style="float:right">
		<div class="row well" id="raised_so_far">
			<center>
				<p><%= t "charity_page.raised_so_far"%>:</p>
				<h3><%=number_to_currency(@total_raised)%></h3>
			</center>
		</div>
	 </span>
</div>

<div class="span2">
	<p style="text-align:center" >
		<%= charity_image(@charity, :thumb)%>
	</p>
	<p style="text-align:center">
	  <b>
	    <%= @charity.website %>
	  </b>
	</p>
</div>
<div class="span9">
<p>
    <%= @charity.description %>
</p>
</div>
<div class="span11" id="charity_updates">
	<div class="page-header" style="padding-top:30px">
  		<h4 style="text-align:right"><%= t("charity_page.last_3_charity_updates") %><p class="support-info" style="font-weight:normal">(<%= t("charity_page.update_info") %>)
	</p></h4>
	</div>
	<% if is_current_user_charity_admin? @charity.id %>
		<div class="row" style="margin-left:0px">
			<a href="<%=new_charity_update_path%>" class="button button-g" title='<%= t "charity_page.new_charity_update"%>'><span class="icon icon3"></span>&nbsp;&nbsp;&nbsp;<%= t "charity_page.new_charity_update"%></a>
		</p>
		</div>
	<% end %>
	
	<% if @last_3_updates && !@last_3_updates.empty?%>
		<% @last_3_updates.each do |update| %>
		<div class="row" style="margin-left:0px" id="charity_update_<%=update.id%>">
	<% if is_current_user_charity_admin?(@charity.id) %>
		<span style="float:right"><%= link_to t('edit'), edit_charity_update_path(update) %> | <%= link_to t('destroy'), update, confirm: 'Are you sure?', method: :delete %>
		</span>
		<% end %>
		<%=raw update.message%>
		
		</div>
		<hr/>
		<% end %>
	<% else %>
		<%= t "charity_page.no_charity_updates_message"%>
	<% end %>
	
</div>
<div class="span11" id="last_donations_div_id">
	<div class="page-header" style="padding-top:30px">
  		<h4 style="text-align:right"><%= t("charity_page.last_10_donations") %></h4>
	</div>
	<% if is_current_user_charity_admin? @charity.id %>
	<div class="row" style="margin-left:0px">
		<a href="<%=charity_donations_path(@charity.id)%>" class="button button-g" title='<%= t "charity_page.list_all_donations"%>'><span class="icon icon120"></span>&nbsp;&nbsp;&nbsp;<%= t "charity_page.list_all_donations"%></a>
	</p>
	</div>
	
	<% end %>
	<% if @recent_donations && !@recent_donations.empty?%>
	<table class="table table-striped table-condensed tiptip"style="border-spacing: 0px;" id="donations_table">
	  <thead>
	    <tr>
		  <th width="15px"></th>
		  <th>Goal</th>
	 	  <th><%= t "charity_page.donor" %></th>
	      <th><%= t "activerecord.attributes.goal_donation.amount" %></th>
	    </tr>
	  </thead>
	  <tbody>
	      <% @recent_donations.each do |goal_donation| %>
	      <tr>
			<td>
			   <%= render 'goal_donations/stage_icon', :goal_donation => goal_donation%>	
			</td>
			<td><%= goal_donation.goal.title %></td>
		    <td><%= goal_donation.donor_name%></td>
	        <td><%= number_to_currency(goal_donation.amount) %></td>	
	      </tr>
	    <% end %>		
	  </tbody>
	</table>
	<%else%>
		<%=t "charity_page.no_donations_message"%>
	<%end%>
</div>
<% if is_current_user_charity_admin?(@charity.id) %>
<div class="span11" id="last_goals_div_id">
	<div class="page-header" style="padding-top:30px">
  		<h4 style="text-align:right"><%= t("charity_page.last_10_goals") %></h4>
	</div>
	<div class="row" style="margin-left:0px">
		<a href="<%=charity_show_goals_path(@charity.id)%>" class="button button-g" title='<%= t "charity_page.list_all_goals"%>'><span class="icon icon120"></span>&nbsp;&nbsp;&nbsp;<%= t "charity_page.list_all_goals"%></a>
	</p>
	</div>
	<% if @goals && !@goals.empty?%>
	<table class="table table-striped table-condensed tiptip"style="border-spacing: 0px;" id="donations_table">
	  <thead>
	    <tr>
		  <th width="100px"><%= t "charity_page.report" %> ?</th>
		  <th>Goal</th>
	    </tr>
	  </thead>
	  <tbody>
	      <% @goals.each do |goal| %>
	      <tr>
		    <td>
		    	<a href="<%=goal_report_abuse_path(goal.achiever.username, goal.id)%>" class="button icon-image" title='<%= t "charity_page.report_abuse"%>' data-confirm='<%= t "charity_page.confirm_report_abuse", :goal_title => goal.title %>' id='report_goal_<%=goal.id%>'><span class="icon icon5"></span></a>
		    </td>
			<td><%= goal.title %></td>	
	      </tr>
	    <% end %>		
	  </tbody>
	</table>
	<%else%>
		<%=t "charity_page.no_goals_message"%>
	<%end%>
</div>
<% end %>
